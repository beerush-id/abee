      "selectors": [ "h6", ".h6" ],
      "layer": "typography",
      "rules": {
        "font-size": "@font.heading.h6"
      }
    },
    {
      "name": "text-center",
      "description": "Center text",
      "layer": "typography",
      "rules": {
        "text-align": "center"
      }
    },
    {
      "name": "text-xxs",
      "description": "Extra extra small text",
      "layer": "typography",
      "selectors": [ ".text-xxs" ],
      "rules": {
        "font-size": "@font.size.xxs"
