      }
    },
    {
      "name": "text-truncate",
      "description": "Truncate text",
      "layer": "typography",
      "selectors": [ ".text-truncate" ],
      "rules": {
        "overflow": "hidden",
        "text-overflow": "ellipsis",
        "white-space": "nowrap"
      }
    }
  ]
}
